<div class="game-input panel panel-default">
  <div class="panel-heading">
    Click on a letter
  </div>
  <div class="panel-body">
    <% ("a" .. "z").each_slice(9) do |letters| %>
      <div>
        <div class="btn-group">
          <% letters.each do |letter| %>
            <button class="<%= game_input_button_css_class(game, letter) %>">
              <%= letter %>
            </button>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  
  <!-- hidden submission form -->
  <div>
    <%= form_tag submit_guess_path(game), id: "submit_guess_form" do %>
      <div>
       <%= text_field_tag "guess", nil%>
       <%= submit_tag "Guess" %>
      </div>
    <% end %>
  </div>
</div>